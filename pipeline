#!/bin/bash

case "$1" in
    init)
        chmod 755 pipeline/parallel
        chmod 755 pipeline/setup.r
        chmod 755 pipeline/methods/fm/bin/libFM
        chmod 755 pipeline/methods/vw/vw
        ./pipeline/setup.r
        ;;
    status)
        cat queue
        ;;
    add)
        if [ "$2" == "dataset" ] ; then
            ./utils/keyvalue.sh add config/datasets "$3"
        elif [ "$2" == "method" ] ; then
            ./utils/keyvalue.sh add config/methods "$3"
        fi
        ;;
    remove)
        if [ "$2" == "dataset" ] ; then
            ./utils/keyvalue.sh remove config/datasets "$3"
        elif [ "$2" == "method" ] ; then
            ./utils/keyvalue.sh remove config/methods "$3"
        fi
        ;;
    push) 
        ./pipeline/remotes/datalab queue
    *)
        echo "usage: $0 { }"
        ;;
esac
exit 0
